<Page x:Class="MyTestApp.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyTestApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Name and LastName" Background="DarkGreen">

    <Grid>
        <StackPanel Margin="100">
            <Label Content="Введите имя и фамилию"
                Foreground="White"
                Background="DarkOrange"
               FontWeight="Bold"
                   Width="300"
               Margin="0 0 0 20"/>
            <TextBox Width="300" Name="Name" TextChanged="Name_TextChanged"/>
            <TextBox Width="300" Name="LastName" TextChanged="LastName_TextChanged"/>
            <Button Content="Начать тестирование"
                Background="DarkOrange"
                Foreground="White"
                Width="300"
                Height="40"
                HorizontalAlignment="Center"
                Margin="10"
                FontSize="18"
                FontWeight="Bold" Click="LoginButtonClick"/>
        </StackPanel>
        <Frame x:Name="MainFrame"/>
    </Grid>
</Page>
