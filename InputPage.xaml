<Page x:Class="MyTestApp.InputPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyTestApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InputPage" Background="DarkGreen">

    <Grid>
        <StackPanel Margin="30">
            <Label Content="Вопрос № 5. Опишите, что такое наследование в ООП и приведите пример его использования."
        Foreground="White"
        Background="DarkOrange"
       FontWeight="Bold"
       Margin="0 0 0 50"
       Name="LabelQuestions"/>

            <TextBox Width="300" Name="Answer"/>

            <Button Content="Проверить"
        Background="DarkOrange"
        Foreground="White"
        Width="300"
        Height="40"
        HorizontalAlignment="Center"
        Margin="10"
        FontSize="18"
        FontWeight="Bold" Click="CheckButtonClick"/>
        </StackPanel>
    </Grid>
</Page>
